#include<bits/stdc++.h>
using namespace std;

void area(int r){
    cout<<"area_of_circle :"<< 3.14*r*r<<endl;
    
}
void area(int l, int b){
    cout<<"area_of_rec :"<< l*b<<endl;
}
void area(double b2, double h){
    cout<<"area_of_triangle :"<< 0.5*b2*h <<endl;
}

int main(){
    int r1,r2,l,b;
    double b2,h;
    cout<<"enter r1: ";
    cin>>r1;
    
    cout<<"enter l&b: ";
    cin>>l>>b;
    
    cout<<"enter b2 & h:";
    cin>>h>>b2;
    
    
    area(r1);
    
    area(l,b);
    
    area(b2,h);
    
}
